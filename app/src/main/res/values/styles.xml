<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Azure" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/azure</item>
        <item name="colorPrimaryDark">@color/azureDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/azure</item>
    </style>

    <style name="Azurelight" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/azure</item>
        <item name="colorPrimaryDark">@color/azureDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/azure</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
